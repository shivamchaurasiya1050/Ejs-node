<%- include('layout/header')%>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                 <% if(message){%>
                         <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="alert">
                            
                      </button>
                     <strong><%= message.message %> </strong>
                    
                    
                 </div>
                    
                    
                     <% }%> 

                <div class="table-responsive">
                    <% if(users!=" "){%>
                        <table class="table table-striped text-center mt-4">

                            <thead>
                                <tr class="table-dark ">
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>E_Mail</th>
                                    <th>Phone</th>
                                    <th>Action</th>


                                </tr>


                            </thead>
                            <tbody>

                               <% users.forEach((element ,index)=> { %>
                                <tr class="align-middle">
                                    <td><%=index+1 %></td>
                                    <td><img src="<%=element.image %>" width="50" class="img-thumbnail" alt=""></td>
                                    <td><%=element.name %></td>
                                    <td><%=element.email %></td>
                                    <td><%=element.phone %></td>
                                    <td><a href="/edit/<%=element._id %>" class="text-success"><i
                                                class="fas fa-edit fa-lg mx-1">Edit</i></a>
                                        <a href="/delete/<%=element._id %>" class="text-danger"><i
                                                class="fas fa-edit fa-lg mx-1">Delete</i></a>
                                    </td>
                                </tr>
                               <% }) %>
                                   
                             
                               

                            </tbody>

                        </table>
                   
                    <% }else{%>
                        <h1 class="text-center text-secondary mt-5" > No users found in the database!</h1>

                   <% }%> 
                    
                            
                        

                </div>


            </div>

        </div>
    </div>

    <%- include('layout/footer')%>